---
// src/components/Navigation.astro
import { Image } from "astro:assets";
import logoImage from "../assets/llms-text.jpg";
---

<nav>
  <a href="/" class="logo">
    <Image
      src={logoImage}
      alt="LLMS Logo"
      width={40}
      height={40}
      format="webp"
    />
  </a>
  <ul>
    <li><a href="/">Home</a></li>
    <li><a href="/about">About</a></li>
    <li><a href="/blog">Blog</a></li>
    <li><a href="/api">API</a></li>
    <li><a href="/request">Request</a></li>
    <li><a href="/legal">Legal</a></li>
  </ul>
</nav>

<style>
  nav {
    background-color: #f0f0f0;
    padding: 1rem;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .logo {
    display: block;
    width: 40px;
    height: 40px;
    opacity: 1;
    visibility: visible;
    overflow: visible;
  }
  /* Target both regular img tags and Astro's Image component */
  .logo :global(img) {
    height: 40px;
    width: 40px;
    object-fit: contain;
    opacity: 1;
    visibility: visible;
  }
  ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    justify-content: center;
    gap: 1rem;
  }
  a {
    text-decoration: none;
    color: #333;
  }
  a:hover {
    color: #007bff;
  }
</style>
