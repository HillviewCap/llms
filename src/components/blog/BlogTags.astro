---
// src/components/blog/BlogTags.astro
interface Props {
  tags: string[];
}

const { tags } = Astro.props;
---

<div class="flex flex-wrap gap-2">
  {
    tags.map((tag) => (
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-primary-900 text-primary-200 hover:bg-primary-800 transition-colors duration-200">
        <span class="w-1.5 h-1.5 mr-1.5 rounded-full bg-primary-400" />
        {tag}
      </span>
    ))
  }
</div>
